{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./build",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "paths": {
      "@jest/*": ["./node_modules/@types/jest/*"]
    }
  },
  "include": [
    "src/App.ts, src/**/*.ts, src/**/*.js, src/**/*.json",
    "src/**/*.d.ts",
    "src/types/**/*"
  ],
  "exclude": ["node_modules", "build"],
  "types": ["node", "jest"]
}
