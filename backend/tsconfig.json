{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/App.ts, src/**/*.ts, src/**/*.js, src/**/*.json",
    "src/**/*.d.ts",
    "src/types/**/*"
  ],
  "exclude": ["node_modules", "build"]
}
